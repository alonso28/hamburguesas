      <tr>
        <td><%= carl.id %></td>
        <td><%= carl.precio %></td>
        <td><%= carl.cantidad %></td>
        <td><%= carl.peso %></td>
        <td><%= carl.tamaño %></td>
        <td><%= link_to 'Show', carl %></td>
        <td><%= link_to 'Edit', edit_carl_path(carl) %></td>
        <td><%= link_to 'Destroy', carl, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

